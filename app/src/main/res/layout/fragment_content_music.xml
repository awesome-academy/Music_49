<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        layout="@layout/fragment_play_song"
        android:id="@+id/layoutContentTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutContentBottom"
        app:layout_constraintTop_toTopOf="parent"
        />
    <include
        layout="@layout/fragment_play_music_mini"
        android:id="@+id/layoutContentBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutContentTop"
        />
</android.support.constraint.ConstraintLayout>
