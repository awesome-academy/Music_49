<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_10"
    >
    <ImageView
        android:id="@+id/imageViewItemNewAndHot"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:scaleType="fitXY"
        android:src="@drawable/classical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewSongNameNewAndHot"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:text="@string/songname"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewItemNewAndHot"
        />
    <TextView
        android:id="@+id/textViewArticsNameNewAndHot"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:text="@string/artics_name"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSongNameNewAndHot"
        />
</android.support.constraint.ConstraintLayout>
