<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <TextView
        android:id="@+id/textViewAudioGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genres"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewAudioGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/textViewAudioGenre"
        />
    <TextView
        android:id="@+id/textViewListMusicAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_music"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewAudioGenre"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewAudioListMusic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewListMusicAudio"
        />
</android.support.constraint.ConstraintLayout>
