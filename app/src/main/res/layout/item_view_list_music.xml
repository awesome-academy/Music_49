<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    >
    <ImageView
        android:id="@+id/imageViewItemListMusic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewSongNameItemList"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/imageViewItemListMusic"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/white"
        android:id="@+id/textViewNameArticsItemListMusic"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/imageViewItemListMusic"
        app:layout_constraintTop_toBottomOf="@id/textViewSongNameItemList"
        />
</android.support.constraint.ConstraintLayout>