<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutPlayMusicMini"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    >
    <ImageView
        android:id="@+id/imageViewSongPlayMusicMini"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewNameSongPlayMusicMini"
        android:layout_width="@dimen/dp_180"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:maxLines="1"
        android:text="@string/songname"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/imageViewSongPlayMusicMini"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewNameArticsPlayMusicMini"
        android:layout_width="@dimen/dp_180"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:maxLines="1"
        android:text="@string/name_artics"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/imageViewSongPlayMusicMini"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameSongPlayMusicMini"
        />
    <ImageButton
        android:id="@+id/imageButtonPreviousPlayMusicMini"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/bg_color"
        android:src="@drawable/icon_previous"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/imageButtonPausePlayMusicMini"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@color/bg_color"
        android:src="@drawable/icon_pause"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonPreviousPlayMusicMini"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPreviousPlayMusicMini"
        />
    <ImageButton
        android:id="@+id/imageButtonNextPlayMusicMini"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@color/bg_color"
        android:src="@drawable/icon_next"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonPausePlayMusicMini"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPausePlayMusicMini"
        />
</android.support.constraint.ConstraintLayout>
