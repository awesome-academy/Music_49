<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <ImageButton
        android:id="@+id/imageButtonBackPlayMusic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_30"
        android:background="@drawable/icon_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewNameSongPlayMusic"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_30"
        android:maxLines="1"
        android:text="@string/name_song"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonBackPlayMusic"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewNameArticsPlayMusic"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:maxLines="1"
        android:text="@string/name_artics"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonBackPlayMusic"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameSongPlayMusic"
        />
    <ImageButton
        android:id="@+id/ImageButtonDownloadPlayMusic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_30"
        android:background="@drawable/icon_download"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/imageViewSongPlayMusic"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_180"
        android:scaleType="fitXY"
        android:src="@drawable/ambient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <SeekBar
        android:id="@+id/seekbarPlaySong"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_18"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonPausePlayMusic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/textViewTimeProgressPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="@string/_01_30"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintRight_toLeftOf="@id/seekbarPlaySong"
        app:layout_constraintTop_toTopOf="@id/seekbarPlaySong"
        />
    <TextView
        android:id="@+id/textViewTimeTotalPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:text="@string/_04_50"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/seekbarPlaySong"
        app:layout_constraintTop_toTopOf="@+id/seekbarPlaySong"
        />
    <ImageButton
        android:id="@+id/ImageButtonRandomPlayMusic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/icon_random"
        app:layout_constraintRight_toLeftOf="@id/ImageButtonPreviousPlayMusic"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPausePlayMusic"
        />
    <ImageButton
        android:id="@+id/ImageButtonPreviousPlayMusic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/previous"
        app:layout_constraintRight_toLeftOf="@id/imageButtonPausePlayMusic"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPausePlayMusic"
        />
    <ImageButton
        android:id="@+id/imageButtonPausePlayMusic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_18"
        android:background="@null"
        android:src="@drawable/icon_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageButton
        android:id="@+id/ImageButtonNextPlayMusic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_30"
        android:background="@drawable/icon_next"
        app:layout_constraintLeft_toRightOf="@id/imageButtonPausePlayMusic"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPausePlayMusic"
        />
    <ImageButton
        android:id="@+id/ImageButtonRepeatPlayMusic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_30"
        android:background="@drawable/icon_repeat"
        app:layout_constraintLeft_toRightOf="@+id/ImageButtonNextPlayMusic"
        app:layout_constraintTop_toTopOf="@+id/imageButtonPausePlayMusic"
        />

</android.support.constraint.ConstraintLayout>